---
import BaseLayout from '../layouts/BaseLayout.astro';
// Build-time import via shared module: single source for list data (ADR-1).
import listData from '../data/load-list';
---

<BaseLayout title="Is It A One Hit Wonder">
	<h1 class="text-lg">Is It A One Hit Wonder</h1>
	<!-- List data inlined at build for client-side search (Epic 2). Client loads from window.__ONE_HIT_WONDERS__. -->
	<script define:vars={{ list: listData }}>
		window.__ONE_HIT_WONDERS__ = list;
	</script>
</BaseLayout>
